<%= render "layouts/errors", :object => @chapter %>

<%= form_for [@lesson, @chapter] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.select(:day, {
    'Weekend'=> 0,
    'Monday'=> 1,
    'Tuesday'=> 2,
    'Wednesday'=> 3,
    'Thursday'=> 4,
    'Friday'=> 5}
  ) %>

  <%= f.label :handson, "Hands On" %>
  <%= f.check_box :handson %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>
